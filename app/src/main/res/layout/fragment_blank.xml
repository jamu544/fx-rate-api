<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.BlankFragment">

        <TextView
            android:id="@+id/textViewFxMarket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/fxmarketapi"
            android:textAlignment="center"
            android:background="@color/dark_yellow"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/spinner9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnConvertCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="@string/convert_currency"
            android:onClick="displayResponseOnClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittextAmount" />

        <EditText
            android:id="@+id/edittextAmount"
            android:layout_width="208dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="@string/amount"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/btnConvertCurrency"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner10" />

        <Spinner
            android:id="@+id/spinner9"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:entries="@array/Currencies"
            android:gravity="center|center_vertical"
            android:minHeight="48dp"
            app:layout_constraintBottom_toTopOf="@+id/spinner10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewFxMarket" />

        <Spinner
            android:id="@+id/spinner10"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:entries="@array/Currencies"
            android:gravity="center|center_vertical"
            android:minHeight="48dp"
            app:layout_constraintBottom_toTopOf="@+id/edittextAmount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner9" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BlankFragment2">

    <TextView
        android:id="@+id/currentfxTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#286F24"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/current_fxrate"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/editTextAustralianDollar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ECEEE8"
        android:padding="10dp" />
    <TextView
        android:id="@+id/editTextEuro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ECEEE8"
        android:padding="10dp" />
    <TextView
        android:id="@+id/editTextBritishPound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ECEEE8"
        android:padding="10dp" />

    <TextView
        android:id="@+id/editTextJapaniesYen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ECEEE8"
        android:hint="@string/australian_dollar"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnDisplayGraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/graph_display" />

</LinearLayout>